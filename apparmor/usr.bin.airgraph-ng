#include <tunables/global>

/usr/bin/airgraph-ng flags=(complain) {
  #include <abstractions/base>

  # No need to access dot files
  deny /home/*/.* rw,

  # For reading input
  @{HOME}/** r,
  /tmp/** r,

  # For writing output
  owner @{HOME}/** w,
  owner /tmp/** w,

  # For executing 'fdp'
  /usr/{,local/,s}bin/fdp ix,

  # Needed for ptrace/core dumps
  /usr/bin/airgraph-ng rm,

}
